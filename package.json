{
	"name": "kuba",
	"displayName": "Kuba",
	"description": "Easy Kubernetes Debugging for .NET Core in VS Code",
	"version": "0.5.0",
	"icon": "media/kuba.128.png",
	"publisher": "queil",
	"author": {
		"name": "queil"
	},
	"repository": {
		"url": "https://github.com/queil/kuba"
	},
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"debuggers": [
			{
				"type": "kuba",
				"label": "Kuba"
			}
		],
		"commands": [
			{
				"command": "kuba.attachTo",
				"title": "Kuba: Attach To"
			},
			{
				"command": "kuba.resetSelection",
				"title": "Kuba: Reset debug target selection"
			},
			{
				"command": "kuba.init",
				"title": "Kuba: Init"
			}
		],
		"viewsContainers": {
			"activitybar": []
		},
		"views": {},
		"menus": {},
		"taskDefinitions": [
			{
				"type": "kuba",
				"required": [
					"label",
					"command"
				],
				"properties": {
					"label": {
						"type": "string",
						"description": "Task label"
					},
					"command": {
						"type": "string",
						"description": "Command to execute"
					},
					"args": {
						"type": "array",
						"description": "Task type"
					}
				}
			}
		],
		"problemPatterns": [
			{
				"name": "tilt",
				"regexp": "^(Error):\\\\s*([^(]+\\\\((.+):(\\\\d+:\\\\d+)\\\\).*)$",
				"file": 3,
				"location": 4,
				"message": 2,
				"severity": 1
			}
		],
		"problemMatchers": [
			{
				"name": "tilt",
				"owner": "tilt",
				"fileLocation": "absolute",
				"pattern": "$tilt"
			}
		],
		"configuration": [
			{
				"title": "Kuba configuration",
				"properties": {
					"kuba.build.relativeSrcDir": {
						"default": "src",
						"type": "string",
						"description": "Build input path relative the current workspaceFolder",
						"scope": "window"
					},
					"kuba.build.relativeDockerfileDir": {
						"default": "src",
						"type": "string",
						"description": "Dockerfile path relative the current workspaceFolder",
						"scope": "window"
					},
					"kuba.build.relativeDockerBuildContextDir": {
						"default": "src",
						"type": "string",
						"description": "Docker build context path relative the current workspaceFolder",
						"scope": "window"
					},
					"kuba.build.relativeBuildOutputDir": {
						"default": "dev/bin",
						"type": "string",
						"description": "Build output path relative the current workspaceFolder",
						"scope": "window"
					},
					"kuba.build.relativeTiltfilePath": {
						"default": "Tiltfile",
						"type": "string",
						"description": "Tiltfile path relative the current workspaceFolder",
						"scope": "window"
					},
					"kuba.debug.runTiltUpBeforeAttach": {
						"default": "true",
						"type": "boolean",
						"description": "If true Kuba will run the tilt-up task before debugger attach.",
						"scope": "window"
					},
					"kuba.debug.defaultRemoteProcessId": {
						"default": "1",
						"type": "number",
						"description": "If greater from 0 then C# debugger will auto-select it on attach.",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"deploy": "vsce publish --yarn"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/utf8": "^2.1.6",
		"event-stream": "^4.0.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"unique-filename": "^1.1.1",
		"vscode": "^1.1.28"
	}
}
